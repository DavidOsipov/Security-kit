{
  "name": "@david-osipov/security-kit",
  "version": "7.3.0",
  "description": "An opinionated, zero-dependency security toolkit for modern browsers. Implements a verifiable Zero Trust security model in TypeScript, built on the native Web Crypto API.",
  "author": "David Osipov <personal@david-osipov.vision>",
  "license": "MIT",
  "homepage": "https://github.com/david-osipov/Security-Kit#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/david-osipov/Security-Kit.git"
  },
  "bugs": {
    "url": "https://github.com/david-osipov/Security-Kit/issues"
  },
  "keywords": [
    "security",
    "crypto",
    "webcrypto",
    "zerotrust",
    "hardening",
    "secure",
    "nanoid",
    "uuid",
    "sri",
    "postmessage",
    "typescript",
    "constant-time",
    "csp",
    "owasp"
  ],
  "type": "module",
  "engines": {
    "node": ">=18.18.0"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "Security Consitution.md",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts --clean --sourcemap",
    "test": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage",
    "lint": "eslint .",
    "pretty": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "pretty:fix": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "eslint:fix": "eslint . --fix",
    "tslint": "tsc --noEmit",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run typecheck && npm run lint && npm run test && npm run build"
  },
  "devDependencies": {
    "@types/eslint-plugin-security": "^3.0.0",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/eslint-plugin": "^1.3.4",
    "eslint": "^9.34.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-n": "^17.21.3",
    "eslint-plugin-no-unsanitized": "^4.1.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-security-node": "^1.1.4",
    "eslint-plugin-sonarjs": "^3.0.4",
    "eslint-plugin-regexp": "^2.10.0",
    "prettier": "^3.6.2",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
